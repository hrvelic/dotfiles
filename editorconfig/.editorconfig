root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space

# Shell script
[*.sh]
indent_size = 2
indent_style = tab

# Elixir
[*.{ex, exs}]
indent_size = 2
trim_trailing_whitespace = true

# Erlang
[*.{erl,src,hrl}]
indent_style = space
indent_size = 4

# Clojure, ClojureScript
[*.{clj,cljs}]
indent_style = space
indent_size = 2

# TypeScript, JavaScript
[*.{ts,js,vue}]
indent_size = 2
trim_trailing_whitespace = true

# Rust
[*.rs]
indent_size = 4
trim_trailing_whitespace = true

# Pythin
[*.py]
indent_size = 4

# JSON
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Web files
[*.{htm,html,js,jsm,css,sass,scss,less,svg}]
indent_size = 2

